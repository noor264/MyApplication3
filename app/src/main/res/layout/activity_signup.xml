<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BFF4DC"
    android:backgroundTint="#BFF4DC"
    tools:context=".Signup">

    <EditText
        android:id="@+id/etUsernameS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_marginBottom="50dp"
        android:ems="10"
        android:hint="user name"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintBottom_toTopOf="@+id/etPasswordS"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/etPasswordS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="74dp"
        android:ems="10"
        android:hint="password"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintBottom_toTopOf="@+id/button_signup"
        app:layout_constraintStart_toStartOf="@+id/etUsernameS"
        app:layout_constraintTop_toBottomOf="@+id/etUsernameS"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button_signup"
        android:layout_width="123dp"
        android:layout_height="0dp"
        android:layout_marginBottom="251dp"
        android:backgroundTint="#0A5841"
        android:text="Signup"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etPasswordS"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>