<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BFF4DC"
    android:backgroundTint="#BFF4DC"
    tools:context="AddInstrument">

    <Button
        android:id="@+id/button"
        android:layout_width="125dp"
        android:layout_height="67dp"
        android:backgroundTint="#0A5841"
        android:text="Add"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="143dp"
        tools:layout_editor_absoluteY="517dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="220dp"
        android:layout_height="52dp"
        android:ems="10"
        android:hint="Instrument's name"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="95dp"
        tools:layout_editor_absoluteY="128dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="192dp"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="Describtion"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="109dp"
        tools:layout_editor_absoluteY="195dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="199dp"
        android:layout_height="24dp"
        android:background="#940A5841"
        android:foregroundTint="#039BE5"
        android:text="Add a mp3 file for DO note here"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        tools:layout_editor_absoluteX="106dp"
        tools:layout_editor_absoluteY="310dp"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="182dp"
        android:layout_height="170dp"
        android:backgroundTint="#00FFFFFF"
        app:srcCompat="@drawable/ic_baseline_music_video_24"
        tools:layout_editor_absoluteX="114dp"
        tools:layout_editor_absoluteY="334dp"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>